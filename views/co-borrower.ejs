<!DOCTYPE html>
<html lang="en">

<head>
    <title>Hackathon 2021</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="css/styles.css">
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
        <a class="navbar-brand" href="#">HACKATHON 2021</a>
        <h5 style="color: white;"><% if (userName !== "") { %>
            Welcome <%- userName %>
            <% } %> </h5>
    </nav>
    <div class="body">
        <h1 style="text-align: center;">Co Borrower</h1>
        <hr>
        <p  style="text-align: center;">Do you have any co-borrower ? </p>
        <div  style="text-align: center;">
        <input type="checkbox" checked data-toggle="toggle" data-on="Yes" data-off="No" data-size="xs" data-onstyle="info"
            data-offstyle="danger" onchange="validateCheckbox(this)">
        </div>
        <div id="co-borrower">
            <form action="/co-borrower" name="myFrom" method="POST" onsubmit="return validateForm()">
                <input type="hidden" name="formType" value="co-borrower">
                <div class="form-group">
                    <label for="">Name of the co-borrower</label>
                    <input type="text" class="form-control" name="coName" placeholder="Name of the co-borrower">
                </div>
                <div class="form-group">
                    <label for="">Age of co-borrower</label>
                    <input type="number" class="form-control" name="coAge" placeholder="Age">
                </div>
                <div class="form-group">
                    <label for="">Annual income of co-borrower</label>
                    <input type="number" class="form-control" name="coIncome" placeholder="Account income in lakhs">
                </div>
                <div class="form-group">
                    <input type="submit" class="form-control btn btn-info" value="Continue">
                </div>
            </form>
        </div>
        <div id="continue" style="display: none;">
            <form action="/co-borrower" method="POST">
                <div class="form-group">
                    <input type="hidden" name="formType" value="no-borrower">
                    <input type="submit" class="form-control btn btn-info" value="Continue">
                </div>
            </form>
        </div>

    </div>
</body>

<script>

    function validateForm() {
        var name = document.forms["myFrom"]["coName"].value;
        if(name.trim() == "") {
            alert("Enter valid co-name");
            return false;
        }
        var age = document.forms["myFrom"]["coAge"].value;
        if(age.toString() == "") {
            alert("Enter valid age");
            return false;
        }
        var income = document.forms["myFrom"]["coIncome"].value;
        if(income.toString() == "") {
            alert("Enter valid income");
            return false;
        }
        
        return true;
    }

    function validateCheckbox(checkbox) {
        var div = document.getElementById("co-borrower");
        var div2 = document.getElementById("continue");
        if (checkbox.checked) {
            div.style.display = "block";
            div2.style.display = "none"
        } else {
            div.style.display = "none";
            div2.style.display = "block"
        }
    }
</script>